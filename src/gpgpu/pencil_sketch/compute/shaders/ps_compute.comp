// clang-format off
//GaussianMatrix[{4, 3}]
const int delta = 4;
const float Gauss[delta * 2 + 1][delta * 2 + 1] =
{
        {0.00378449, 0.00564742, 0.00754943, 0.00900273, 0.00955004, 0.00900273, 0.00754943, 0.00564742, 0.00378449},
